        $(document).ready(function () {
            try {
            var inDesignMode = document.forms[MSOWebPartPageFormName].MSOLayout_InDesignMode.value;
            if (inDesignMode == "1") {
                return;
            }

            var sharingButtons = $('.rrssb-buttons');
            var currentUrl = escape(window.location.href);
            var pageTitle = escape(document.title);

            var links = sharingButtons.find('.rrssb-facebook a,.rrssb-twitter a');
            for (var index = 0; index < links.length; index++) {
                var link = links[index];
                link.href = link.href + currentUrl;
            }

            var linkedInLink = sharingButtons.find('.rrssb-linkedin a').get(0);
                linkedInLink.href = "https://www.linkedin.com/shareArticle?mini=true&url=" + currentUrl + "&title=" + pageTitle + "&summary=&source=" + currentUrl;
            var emailLink = sharingButtons.find('.rrssb-email a').get(0);
            emailLink.href = "mailto:?subject=" + document.title + '&body=' + currentUrl;
            } catch(err) {
            }
        });
